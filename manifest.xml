<?xml version="1.0" encoding="UTF-8"?>
<OfficeApp xmlns="http://schemas.microsoft.com/office/appforoffice/1.1"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xmlns:bt="http://schemas.microsoft.com/office/officeappbasictypes/1.0"
           xmlns:mailappor="http://schemas.microsoft.com/office/mailappversionoverrides/1.0"
           xsi:type="MailApp">

  <!-- Basic Information -->
  <Id>12345678-1234-1234-1234-123456789012</Id>
  <Version>1.0.0.0</Version>
  <ProviderName>Your Organization</ProviderName>
  <DefaultLocale>en-US</DefaultLocale>
  
  <!-- Display Name -->
  <DisplayName DefaultValue="Hornet Security Encryption Tags"/>
  
  <!-- Description -->
  <Description DefaultValue="Apply Hornet Security encryption tags to your emails with ease. Supports TLS, S/MIME, PGP, Websafe, and EmiG encryption methods."/>
  
  <!-- Icon URLs (replace with your hosted icons) -->
  <IconUrl DefaultValue="https://yourdomain.com/assets/icon-32.png"/>
  <HighResolutionIconUrl DefaultValue="https://yourdomain.com/assets/icon-80.png"/>
  
  <!-- Support URL -->
  <SupportUrl DefaultValue="https://yourdomain.com/support"/>
  
  <!-- Domains that the add-in will access -->
  <AppDomains>
    <AppDomain>https://yourdomain.com</AppDomain>
    <AppDomain>https://api.hornetsecurity.com</AppDomain>
  </AppDomains>
  
  <!-- Hosts -->
  <Hosts>
    <Host Name="Mailbox"/>
  </Hosts>
  
  <!-- Requirements -->
  <Requirements>
    <Sets>
      <Set Name="Mailbox" MinVersion="1.1"/>
    </Sets>
  </Requirements>
  
  <!-- Form Settings -->
  <FormSettings>
    <Form xsi:type="ItemRead">
      <DesktopSettings>
        <SourceLocation DefaultValue="https://yourdomain.com/hornet-security-addon.html"/>
        <RequestedHeight>400</RequestedHeight>
      </DesktopSettings>
    </Form>
    <Form xsi:type="ItemEdit">
      <DesktopSettings>
        <SourceLocation DefaultValue="https://yourdomain.com/hornet-security-addon.html"/>
        <RequestedHeight>400</RequestedHeight>
      </DesktopSettings>
    </Form>
  </FormSettings>
  
  <!-- Permissions -->
  <Permissions>ReadWriteItem</Permissions>
  
  <!-- Rule for when the add-in should activate -->
  <Rule xsi:type="RuleCollection" Mode="Or">
    <Rule xsi:type="ItemIs" ItemType="Message" FormType="Edit"/>
    <Rule xsi:type="ItemIs" ItemType="Message" FormType="Read"/>
  </Rule>
  
  <!-- Version Overrides for Ribbon Integration -->
  <VersionOverrides xmlns="http://schemas.microsoft.com/office/mailappversionoverrides" xsi:type="VersionOverridesV1_0">
    
    <Requirements>
      <bt:Sets DefaultMinVersion="1.3">
        <bt:Set Name="Mailbox"/>
      </bt:Sets>
    </Requirements>
    
    <Hosts>
      <Host xsi:type="MailHost">
        
        <!-- Desktop Form Factor -->
        <DesktopFormFactor>
          <!-- Message Compose Surface -->
          <ExtensionPoint xsi:type="MessageComposeCommandSurface">
            <OfficeTab id="TabDefault">
              <Group id="HornetSecurityGroup">
                <Label resid="HornetSecurityGroupLabel"/>
                
                <!-- Encryption Tags Button -->
                <Control xsi:type="Button" id="EncryptionTagsButton">
                  <Label resid="EncryptionTagsLabel"/>
                  <Supertip>
                    <Title resid="EncryptionTagsLabel"/>
                    <Description resid="EncryptionTagsTooltip"/>
                  </Supertip>
                  <Icon>
                    <bt:Image size="16" resid="Icon16"/>
                    <bt:Image size="32" resid="Icon32"/>
                    <bt:Image size="80" resid="Icon80"/>
                  </Icon>
                  <Action xsi:type="ShowTaskpane">
                    <TaskpaneId>EncryptionTagsTaskpane</TaskpaneId>
                    <SourceLocation resid="TaskpaneUrl"/>
                  </Action>
                </Control>
                
              </Group>
            </OfficeTab>
          </ExtensionPoint>
          
          <!-- Task Pane -->
          <ExtensionPoint xsi:type="MessageComposeCommandSurface">
            <!-- This will be our main interface -->
          </ExtensionPoint>
        </DesktopFormFactor>
        
      </Host>
    </Hosts>
    
    <!-- Resources -->
    <Resources>
      <bt:Images>
        <bt:Image id="Icon16" DefaultValue="https://yourdomain.com/assets/icon-16.png"/>
        <bt:Image id="Icon32" DefaultValue="https://yourdomain.com/assets/icon-32.png"/>
        <bt:Image id="Icon80" DefaultValue="https://yourdomain.com/assets/icon-80.png"/>
      </bt:Images>
      
      <bt:Urls>
        <bt:Url id="TaskpaneUrl" DefaultValue="https://yourdomain.com/hornet-security-addon.html"/>
      </bt:Urls>
      
      <bt:ShortStrings>
        <bt:String id="HornetSecurityGroupLabel" DefaultValue="Hornet Security"/>
        <bt:String id="EncryptionTagsLabel" DefaultValue="Encryption Tags"/>
      </bt:ShortStrings>
      
      <bt:LongStrings>
        <bt:String id="EncryptionTagsTooltip" DefaultValue="Apply Hornet Security encryption tags to secure your email communication"/>
      </bt:LongStrings>
    </Resources>
    
  </VersionOverrides>
  
</OfficeApp>