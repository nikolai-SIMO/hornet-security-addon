<?xml version="1.0" encoding="UTF-8"?>
<OfficeApp xmlns="http://schemas.microsoft.com/office/appforoffice/1.1"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xmlns:bt="http://schemas.microsoft.com/office/officeappbasictypes/1.0"
           xmlns:mailappor="http://schemas.microsoft.com/office/mailappversionoverrides/1.0"
           xsi:type="MailApp">
  
  <!-- Basic Add-in Information -->
  <Id>0e63a358-b4a7-4f43-8c01-01f2b49e71b2</Id>
  <Version>1.0.0.0</Version>
  <ProviderName>SIMO</ProviderName>
  <DefaultLocale>en-US</DefaultLocale>
  
  <!-- Display Information -->
  <DisplayName DefaultValue="Hornet Security Encryption Tags"/>
  <Description DefaultValue="Apply encryption tags (TLS, S/MIME, PGP, Websafe, EmiG) to emails for enhanced security compliance and protection."/>
  <IconUrl DefaultValue="https://nikolai-simo.github.io/hornet-security-addon/icon32.png"/>
  <HighResolutionIconUrl DefaultValue="https://nikolai-simo.github.io/hornet-security-addon/icon80.png"/>
  <SupportUrl DefaultValue="https://github.com/nikolai-simo/hornet-security-addon"/>
  
  <!-- App Domains -->
  <AppDomains>
    <AppDomain>https://nikolai-simo.github.io</AppDomain>
  </AppDomains>
  
  <!-- Hosts Configuration -->
  <Hosts>
    <Host Name="Mailbox"/>
  </Hosts>
  
  <!-- Requirements -->
  <Requirements>
    <Sets>
      <Set Name="Mailbox" MinVersion="1.1"/>
    </Sets>
  </Requirements>
  
  <!-- Form Settings - Using ItemEdit for Compose Mode -->
  <FormSettings>
    <Form xsi:type="ItemEdit">
      <DesktopSettings>
        <SourceLocation DefaultValue="https://nikolai-simo.github.io/hornet-security-addon/hornet-security-addon.html"/>
      </DesktopSettings>
    </Form>
  </FormSettings>
  
  <!-- Permissions -->
  <Permissions>ReadWriteItem</Permissions>
  
  <!-- Activation Rule - Compose Mode Only -->
  <Rule xsi:type="RuleCollection" Mode="Or">
    <Rule xsi:type="ItemIs" ItemType="Message" FormType="Edit"/>
  </Rule>
  
  <!-- Version Overrides for Modern Outlook UI -->
  <VersionOverrides xmlns="http://schemas.microsoft.com/office/mailappversionoverrides" xsi:type="VersionOverridesV1_0">
    
    <!-- Hosts Configuration -->
    <Hosts>
      <Host xsi:type="MailHost">
        
        <!-- Desktop Form Factor -->
        <DesktopFormFactor>
          <!-- Function File -->
          <FunctionFile resid="Commands.Url"/>
          
          <!-- Extension Point for Message Compose -->
          <ExtensionPoint xsi:type="MessageComposeCommandSurface">
            <OfficeTab id="TabDefault">
              <Group id="HornetSecurityGroup">
                <Label resid="GroupLabel"/>
                
                <!-- Task Pane Button -->
                <Control xsi:type="Button" id="HornetSecurityButton">
                  <Label resid="TaskpaneButton.Label"/>
                  <Supertip>
                    <Title resid="TaskpaneButton.Title"/>
                    <Description resid="TaskpaneButton.Tooltip"/>
                  </Supertip>
                  <Icon>
                    <bt:Image size="16" resid="Icon.16"/>
                    <bt:Image size="32" resid="Icon.32"/>
                    <bt:Image size="80" resid="Icon.80"/>
                  </Icon>
                  <Action xsi:type="ShowTaskpane">
                    <SourceLocation resid="Taskpane.Url"/>
                  </Action>
                </Control>
                
              </Group>
            </OfficeTab>
          </ExtensionPoint>
          
        </DesktopFormFactor>
        
      </Host>
    </Hosts>
    
    <!-- Resources Section - Strict ordering for schema validation -->
    <Resources>
      <!-- Images first -->
      <bt:Images>
        <bt:Image id="Icon.16" DefaultValue="https://nikolai-simo.github.io/hornet-security-addon/icon16.png"/>
        <bt:Image id="Icon.32" DefaultValue="https://nikolai-simo.github.io/hornet-security-addon/icon32.png"/>
        <bt:Image id="Icon.80" DefaultValue="https://nikolai-simo.github.io/hornet-security-addon/icon80.png"/>
      </bt:Images>
      
      <!-- URLs second -->
      <bt:Urls>
        <bt:Url id="Commands.Url" DefaultValue="https://nikolai-simo.github.io/hornet-security-addon/hornet-security-addon.html"/>
        <bt:Url id="Taskpane.Url" DefaultValue="https://nikolai-simo.github.io/hornet-security-addon/hornet-security-addon.html"/>
      </bt:Urls>
      
      <!-- ShortStrings third -->
      <bt:ShortStrings>
        <bt:String id="GroupLabel" DefaultValue="Hornet Security"/>
        <bt:String id="TaskpaneButton.Label" DefaultValue="Encryption Tags"/>
        <bt:String id="TaskpaneButton.Title" DefaultValue="Encryption Tags"/>
      </bt:ShortStrings>
      
      <!-- LongStrings fourth -->
      <bt:LongStrings>
        <bt:String id="TaskpaneButton.Tooltip" DefaultValue="Apply encryption tags (TLS, S/MIME, PGP, Websafe, EmiG) to secure your email communications"/>
      </bt:LongStrings>
    </Resources>
    
  </VersionOverrides>
  
</OfficeApp>
